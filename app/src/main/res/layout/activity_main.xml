<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    </RelativeLayout>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >

           <ImageView
               android:id="@+id/imageView"
               android:layout_width="match_parent"
               android:layout_height="131dp"
               app:srcCompat="@drawable/eden" />

           <ImageView
               android:id="@+id/btnlogin"
               android:layout_width="49dp"
               android:layout_height="47dp"
               app:srcCompat="@drawable/ic_home_black_24dp" />

           <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:weightSum="1"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
       >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_margin="10dp"

            android:layout_height="wrap_content"
            android:background="#99000000"

            >

            <Button
                android:id="@+id/btninfo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_info" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btninfo1"

                android:text="Información"
                android:textColor="@android:color/white"
                android:id="@+id/textView1" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#99000000"
            android:layout_weight="0.5"
            android:layout_margin="10dp"


            >
            <Button
                android:id="@+id/btnhabi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_cama_de_matrimonio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btnhabi"

                android:text="Habitaciones y Suites"
                android:textColor="@android:color/white"
                android:id="@+id/textView" />

        </RelativeLayout>

    </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:fillViewport="true"
               android:weightSum="1"
               android:layout_gravity="center_horizontal"
               android:orientation="horizontal"
               >
               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_weight="0.5"
                   android:layout_margin="10dp"

                   android:layout_height="wrap_content"
                   android:background="#99000000"

                   >

                   <Button
                       android:id="@+id/btnrestaurante"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_alignParentTop="true"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/ic_restaurante_simbolo_circular_de_cubiertos_de_una_cuchara_y_un_tenedor_en_un_circulo" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@id/btnrestaurante"

                       android:text="Restaurante"
                       android:textColor="@android:color/white"
                       android:id="@+id/textView3" />

               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:background="#99000000"
                   android:layout_weight="0.5"
                   android:layout_margin="10dp"


                   >
                   <Button
                       android:id="@+id/btnevento"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_alignParentTop="true"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/ic_calendario_con_un_reloj_herramientas_de_tiempo" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@id/btnevento"

                       android:text="Eventos"
                       android:textColor="@android:color/white"
                       android:id="@+id/textView4" />

               </RelativeLayout>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:fillViewport="true"
               android:weightSum="1"
               android:layout_gravity="center_horizontal"
               android:orientation="horizontal"
               >
               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_weight="0.5"
                   android:layout_margin="10dp"

                   android:layout_height="wrap_content"
                   android:background="#99000000"

                   >

                   <Button
                       android:id="@+id/btnoferta"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_alignParentTop="true"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/ic_alerta_simbolo_dibujado_a_mano" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@id/btnoferta"

                       android:text="Ofertas Especiales"
                       android:textColor="@android:color/white"
                       android:id="@+id/textView5" />

               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:background="#99000000"
                   android:layout_weight="0.5"
                   android:layout_margin="10dp"


                   >
                   <Button
                       android:id="@+id/btninstalaciones"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_alignParentTop="true"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/ic_cliente" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@id/btninstalaciones"

                       android:text="Instalaciones y Servicios"
                       android:textColor="@android:color/white"
                       android:id="@+id/textView6" />

               </RelativeLayout>

           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:fillViewport="true"
               android:weightSum="1"
               android:layout_gravity="center_horizontal"
               android:orientation="horizontal"
               >

               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"

                   android:layout_alignParentEnd="true"
                   android:layout_alignParentRight="true"
                   android:layout_margin="15dp"

                   android:layout_alignParentTop="true"

                   android:layout_weight="0.5"
                   android:background="#99000000">

                   <Button
                       android:id="@+id/btngaleria"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_alignEnd="@+id/textView7"
                       android:layout_alignParentTop="true"
                       android:layout_alignRight="@+id/textView7"
                       android:background="@drawable/ic_galeria" />

                   <TextView
                       android:id="@+id/textView7"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_below="@id/btngaleria"

                       android:layout_centerHorizontal="true"
                       android:text="Galeria de Eventos"
                       android:textColor="@android:color/white" />

               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:background="#99000000"
                   android:layout_weight="0.5"
                   android:layout_margin="10dp"


                   >
                   <Button
                       android:id="@+id/btnlugar"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_alignParentTop="true"
                       android:layout_centerHorizontal="true"
                       android:background="@drawable/ic_herramienta_de_punto_de_aguja_para_mapas" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_centerHorizontal="true"
                       android:layout_below="@id/btnlugar"

                       android:text="Lugar de Interés"
                       android:textColor="@android:color/white"
                       android:id="@+id/textView8" />

               </RelativeLayout>

           </LinearLayout>

       </LinearLayout>

   </ScrollView>

</LinearLayout>




